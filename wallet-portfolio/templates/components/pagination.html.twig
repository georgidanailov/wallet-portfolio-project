<div class="pagination-wrapper">
    {% if pagination.totalPages > 1 %}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {# Previous Page Link #}
                <li class="page-item {{ pagination.hasPreviousPage ? '' : 'disabled' }}">
                    {% if pagination.hasPreviousPage %}
                        <a class="page-link" href="{{ path(route_name, {page: pagination.previousPage}) }}">
                            &laquo; Previous
                        </a>
                    {% else %}
                        <span class="page-link">&laquo; Previous</span>
                    {% endif %}
                </li>

                {# Page Numbers #}
                {% for pageNumber in pagination.pageNumbers %}
                    <li class="page-item {{ pageNumber == pagination.currentPage ? 'active' : '' }}">
                        {% if pageNumber == pagination.currentPage %}
                            <span class="page-link">{{ pageNumber }}</span>
                        {% else %}
                            <a class="page-link" href="{{ path(route_name, {page: pageNumber}) }}">{{ pageNumber }}</a>
                        {% endif %}
                    </li>
                {% endfor %}

                {# Next Page Link #}
                <li class="page-item {{ pagination.hasNextPage ? '' : 'disabled' }}">
                    {% if pagination.hasNextPage %}
                        <a class="page-link" href="{{ path(route_name, {page: pagination.nextPage}) }}">
                            Next &raquo;
                        </a>
                    {% else %}
                        <span class="page-link">Next &raquo;</span>
                    {% endif %}
                </li>
            </ul>
        </nav>

        {# Pagination Info #}
        <div class="pagination-info text-center mt-2">
            <small class="text-muted">
                Showing {{ ((pagination.currentPage - 1) * pagination.itemsPerPage) + 1 }} to
                {{ min(pagination.currentPage * pagination.itemsPerPage, pagination.totalItems) }}
                of {{ pagination.totalItems }} orders
            </small>
        </div>
    {% endif %}
</div>