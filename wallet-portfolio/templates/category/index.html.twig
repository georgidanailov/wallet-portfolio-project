{% extends 'base.html.twig' %}

{% block title %}Categories - Wallet Store{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="section-title">Product Categories</h1>
                <p class="text-center">Browse products by category</p>
            </div>
        </div>

        {% if categories is empty %}
            <div class="row">
                <div class="col-12">
                    <div class="card text-center">
                        <div class="card-body py-5">
                            <h5>No categories available</h5>
                            <p>Categories will appear here once they're added to the store</p>
                            <a href="{{ path('app_home') }}" class="btn btn-primary">Go Home</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                {% for category in categories %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h4 class="card-title mb-3">{{ category.name }}</h4>

                                <div class="mb-4">
                                    <div class="text-success">{{ category.products|length }}</div>
                                    <div>Products</div>
                                </div>

                                <a href="{{ path('products_by_category', {'id': category.id}) }}"
                                   class="btn btn-primary w-100">
                                    Browse Products
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="{{ path('app_product') }}" class="btn btn-outline-primary">View All Products</a>
            </div>
        </div>
    </div>
{% endblock %}